# EVA Assistant Environment Variables
# Copy this file to .env.local and fill in the values

# ==========================================
# SUPABASE CONFIGURATION
# ==========================================
# Required: Your Supabase project URL and anonymous key
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Optional: Service role key for server-side operations (keep secret!)
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# ==========================================
# APPLICATION CONFIGURATION
# ==========================================
# Required: Base URL of your application
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Optional: Node environment (development, production)
NODE_ENV=development

# Optional: Server configuration
PORT=3000
HOSTNAME=localhost

# ==========================================
# AI & API KEYS
# ==========================================
# Required: Google Gemini API key for AI features
NEXT_PUBLIC_GEMINI_API_KEY=your_gemini_api_key
GEMINI_API_KEY=your_gemini_api_key

# Required: Firecrawl API key for web scraping
NEXT_PUBLIC_FIRECRAWL_API_KEY=your_firecrawl_api_key
FIRECRAWL_API_KEY=your_firecrawl_api_key

# Optional: Google AI API key (for specific AI features)
NEXT_PUBLIC_GOOGLE_AI_API_KEY=your_google_ai_api_key

# ==========================================
# MICROSOFT ENTRA ID (AZURE AD) CONFIGURATION
# ==========================================
# Required for Microsoft 365 integration
NEXT_PUBLIC_ENTRA_CLIENT_ID=your_microsoft_entra_client_id
ENTRA_CLIENT_ID=your_microsoft_entra_client_id
ENTRA_CLIENT_SECRET=your_microsoft_entra_client_secret
NEXT_PUBLIC_ENTRA_TENANT_ID=your_microsoft_entra_tenant_id
ENTRA_TENANT_ID=your_microsoft_entra_tenant_id

# Legacy Microsoft naming (being phased out)
NEXT_PUBLIC_MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_ID=your_microsoft_client_id
MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
NEXT_PUBLIC_MICROSOFT_CLIENT_SECRET=your_microsoft_client_secret
MICROSOFT_TENANT_ID=your_microsoft_tenant_id

# ==========================================
# OAUTH PROVIDERS CONFIGURATION
# ==========================================
# LinkedIn OAuth
NEXT_PUBLIC_LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_REDIRECT_URI=http://localhost:3000/auth/linkedin/callback

# Zoom OAuth
ZOOM_CLIENT_ID=your_zoom_client_id
ZOOM_CLIENT_SECRET=your_zoom_client_secret
ZOOM_REDIRECT_URI=http://localhost:3000/api/auth/zoom/callback
ZOOM_WEBHOOK_SECRET_TOKEN=your_zoom_webhook_secret
ZOOM_ACCOUNT_ID=your_zoom_account_id

# Google OAuth
NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Salesforce OAuth
SALESFORCE_CLIENT_ID=your_salesforce_client_id
SALESFORCE_CLIENT_SECRET=your_salesforce_client_secret
SALESFORCE_INSTANCE_URL=https://your-instance.salesforce.com

# Zoho CRM OAuth
NEXT_PUBLIC_ZOHO_CLIENT_ID=your_zoho_client_id
ZOHO_CLIENT_ID=your_zoho_client_id
ZOHO_CLIENT_SECRET=your_zoho_client_secret
ZOHO_WEBHOOK_TOKEN=your_zoho_webhook_token

# ==========================================
# TWILIO CONFIGURATION
# ==========================================
# Required for SMS and voice features
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
NEXT_PUBLIC_TWILIO_PHONE_NUMBER=+1234567890
TWILIO_VOICE_URL=https://your-app.com/api/twilio/voice
TWILIO_STATUS_CALLBACK_URL=https://your-app.com/api/twilio/status

# ==========================================
# SECURITY & ENCRYPTION
# ==========================================
# Required: Encryption key for OAuth token storage (32 characters)
OAUTH_ENCRYPTION_KEY=your_32_character_encryption_key_here
ENCRYPTION_KEY=your_32_character_encryption_key_here
NEXT_PUBLIC_ENCRYPTION_KEY=your_32_character_encryption_key_here

# ==========================================
# WEBSOCKET & REAL-TIME CONFIGURATION
# ==========================================
# Optional: WebSocket server configuration
NEXT_PUBLIC_WEBSOCKET_URL=http://localhost:3001
NEXT_PUBLIC_WS_URL=ws://localhost:3001

# ==========================================
# WEBRTC CONFIGURATION (OPTIONAL)
# ==========================================
# Optional: TURN server for WebRTC voice/video
NEXT_PUBLIC_TURN_SERVER_URL=turn:your-turn-server.com:3478
NEXT_PUBLIC_TURN_USERNAME=username
NEXT_PUBLIC_TURN_CREDENTIAL=password

# ==========================================
# SOCIAL MEDIA TOKENS (OPTIONAL)
# ==========================================
# Optional: Social media API tokens for content posting
TWITTER_API_KEY=your_twitter_api_key
FACEBOOK_ACCESS_TOKEN=your_facebook_access_token
LINKEDIN_ACCESS_TOKEN=your_linkedin_access_token

# ==========================================
# MONITORING & ANALYTICS (OPTIONAL)
# ==========================================
# Optional: Error monitoring endpoint
NEXT_PUBLIC_ERROR_MONITORING_ENDPOINT=https://your-monitoring-service.com/errors

# Optional: Webhook base URL for external services
NEXT_PUBLIC_WEBHOOK_BASE_URL=https://your-app.com

# ==========================================
# EMAIL & COMMUNICATION (OPTIONAL)
# ==========================================
# Optional: Email API configuration
EMAIL_API_URL=/api/email
GRAPH_ACCESS_TOKEN=your_microsoft_graph_access_token

# ==========================================
# LOGGING CONFIGURATION (OPTIONAL)
# ==========================================
# Optional: Log level (0=ERROR, 1=INFO, 2=DEBUG, 3=TRACE)
LOG_LEVEL=1

# ==========================================
# LEGACY/DEPRECATED VARIABLES
# ==========================================
# These are being phased out - use the newer versions above
NEXT_PUBLIC_AZURE_AD_CLIENT_ID=your_azure_client_id